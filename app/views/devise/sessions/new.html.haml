.container
  %span.image
    = image_tag src="/assets/Rectangle.png"
  
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .input-group
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field"
    
    .input-group
      = f.label :password
      %br/
      = f.password_field :password, autocomplete: "current-password", class: "input-field"

    - if devise_mapping.rememberable?
      .input-group
        = f.check_box :remember_me
        = f.label :remember_me
    
    .actions
      = f.submit "LOGIN", class: "submit-btn"

  = render "devise/shared/links"

